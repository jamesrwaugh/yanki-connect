{
	"name": "yanki-connect",
	"version": "2.1.1",
	"type": "module",
	"description": "A fully-typed Anki-Connect API client.",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kitschpatrol/yanki-connect.git"
	},
	"homepage": "https://github.com/kitschpatrol/yanki-connect",
	"bugs": {
		"url": "https://github.com/kitschpatrol/yanki-connect/issues",
		"email": "eric@ericmika.com"
	},
	"author": {
		"name": "Eric Mika",
		"email": "eric@ericmika.com",
		"url": "https://ericmika.com"
	},
	"license": "MIT",
	"packageManager": "pnpm@9.7.1",
	"engines": {
		"node": "^18.19.0 || >=20.5.0",
		"pnpm": ">=9.0.0"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"keywords": [
		"anki",
		"flashcards",
		"spaced-repetition",
		"anki-connect",
		"client",
		"api",
		"yanki",
		"npm-package"
	],
	"scripts": {
		"build": "pkgroll --clean-dist --minify --sourcemap",
		"clean": "rimraf ./pnpm-lock.yaml && git clean -fdX",
		"fix": "shared-config --fix",
		"lint": "shared-config --lint",
		"release": "pnpm bumpp --commit 'Release: %s' && pnpm build && pnpm publish --otp $(op read 'op://Personal/Npmjs/one-time password?attribute=otp')",
		"test": "vitest",
		"test-browser": "vite"
	},
	"dependencies": {
		"@types/node": "18.19.0",
		"open": "^10.1.0"
	},
	"devDependencies": {
		"@kitschpatrol/shared-config": "^4.7.2",
		"bumpp": "^9.5.1",
		"pkgroll": "^2.4.2",
		"rimraf": "^6.0.1",
		"typescript": "^5.5.4",
		"vite": "^5.4.0",
		"vitest": "^2.0.5"
	},
	"publishConfig": {
		"access": "public"
	}
}

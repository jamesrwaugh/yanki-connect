{
	"name": "yanki-connect",
	"version": "0.0.0",
	"type": "module",
	"description": "A fully-typed Anki-Connect API client.",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kitschpatrol/yanki-connect.git"
	},
	"homepage": "https://github.com/kitschpatrol/yanki-connect",
	"bugs": {
		"url": "https://github.com/kitschpatrol/yanki-connect/issues",
		"email": "eric@ericmika.com"
	},
	"author": {
		"name": "Eric Mika",
		"email": "eric@ericmika.com",
		"url": "https://ericmika.com"
	},
	"license": "MIT",
	"packageManager": "pnpm@9.1.3",
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.0.0"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"keywords": [
		"anki",
		"spaced-repetition",
		"anki-connect",
		"client",
		"api",
		"npm-package"
	],
	"scripts": {
		"build": "tsx ./scripts/build.ts && tsc -p tsconfig.build.json",
		"fix": "shared-config --fix",
		"lint": "shared-config --lint",
		"preview": "vite preview",
		"release": "pnpm build && pnpm bumpp --commit 'Release: %s' && pnpm publish --otp $(op read 'op://Personal/Npmjs/one-time password?attribute=otp')",
		"test": "vitest"
	},
	"devDependencies": {
		"@kitschpatrol/shared-config": "^4.6.6",
		"@types/node": "^20.12.12",
		"esbuild": "^0.21.4",
		"open": "^10.1.0",
		"tsx": "^4.11.0",
		"vitest": "^1.6.0"
	},
	"publishConfig": {
		"access": "public"
	}
}

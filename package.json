{
	"name": "yanki-connect",
	"version": "2.1.7",
	"type": "module",
	"description": "A fully-typed Anki-Connect API client.",
	"repository": "github:kitschpatrol/yanki-connect",
	"homepage": "https://github.com/kitschpatrol/yanki-connect",
	"bugs": "https://github.com/kitschpatrol/yanki-connect/issues",
	"author": {
		"name": "Eric Mika",
		"email": "eric@ericmika.com",
		"url": "https://ericmika.com"
	},
	"license": "MIT",
	"packageManager": "pnpm@9.13.2",
	"engines": {
		"node": "^18.19.0 || >=20.5.0",
		"pnpm": ">=9.0.0"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"keywords": [
		"anki",
		"flashcards",
		"spaced-repetition",
		"anki-connect",
		"client",
		"api",
		"yanki",
		"npm-package"
	],
	"scripts": {
		"build": "pkgroll --clean-dist --minify --sourcemap",
		"clean": "git rm -f pnpm-lock.yaml ; git clean -fdX",
		"coverage": "vitest run --coverage",
		"fix": "shared-config --fix",
		"lint": "shared-config --lint",
		"release": "bumpp --commit 'Release: %s' && pnpm run build && pnpm publish --otp $(op read 'op://Personal/Npmjs/one-time password?attribute=otp')",
		"test": "vitest"
	},
	"dependencies": {
		"@types/node": "18.19.0",
		"open": "^10.1.0"
	},
	"devDependencies": {
		"@kitschpatrol/shared-config": "^4.7.12",
		"@vitest/browser": "^2.1.5",
		"@vitest/coverage-istanbul": "^2.1.5",
		"bumpp": "^9.8.1",
		"pkgroll": "^2.5.1",
		"playwright": "^1.49.0",
		"typescript": "^5.6.3",
		"vite": "^5.4.11",
		"vitest": "^2.1.5"
	},
	"publishConfig": {
		"access": "public"
	}
}
